<form action="/shelters" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a new Shelter:</p>
  <label for="name">Shelter Name:</label><br>
  <input type='text' name='shelter[name]' id='name'><br/>
  <label for="address">Address:</label><br>
  <input type='text' name='shelter[address]' id='address'><br/>
  <label for="city">City:</label><br>
  <input type="text" name='shelter[city]' id='city'><br/>
  <label for="state">State:</label><br>
  <input type="text" name='shelter[state]' id='state'><br/>
  <label for="zip">Zip:</label><br>
  <input type="text" name='shelter[zip]' id='zip'><br/>
  <br>
  <input type='submit' value="Create Shelter"><br>
  <br>
</form>
